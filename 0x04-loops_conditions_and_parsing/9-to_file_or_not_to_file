#!/usr/bin/env bash
#basic for loop

re="school"
for file in *
do
	if [ -e "$re" ]; then 
		echo "school file exists"
		if [ -s "$file" ]; then
			echo "school file is not empty"
		else
			echo "school file is empty"
		fi
		if [ -d "$file" ]; then
                        echo "school is a regular file"
		elif [  -f "$file" ]; then
			break
		fi
		break
	elif [ ! -e "$re" ]; then
	 	echo "school file does not exist"
		break
	fi
done
